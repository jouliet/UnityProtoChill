/* ChatWindow.uss */

/* Style for the main chat container */
.chat-container {
    flex-direction: column;
    flex-grow: 1;
    width: 100%;
    height: 100%;
}

/* Style for the chat messages container (ScrollView) */
.chat-messages-container {
    height: 63%;
    background-color: #686868;
    padding: 5px;
    overflow: scroll;
    flex-direction: column;
    align-content: flex-end;
}

/* Style for the chat user bubbles */
.chat-user-bubble {
    background-color: #b294b2;
    border-radius: 8px;
    margin: 10px 5px 10px 50px;
}

.chat-text > .unity-text-field__input {
    font-size: 12px;
    color: black;
    padding: 5px;
    white-space: normal;
}

.chat-text > .unity-base-text-field__input {
    -unity-background-image-tint-color: transparent;
    border-color: transparent;
    background-color: transparent;
}

.chat-text > .unity-base-text-field__input:focus {
    border-color: transparent;
}

/* Style for the chat protochill bubbles */
.chat-protochill-bubble {
    background-color: #adced4;
    border-radius: 8px;
    margin: 10px 50px 10px 5px;
}

/* Style for the input field container */
.chat-input-container {
    height: 37%;
    background-color: white;
    padding: 4px;
    flex-direction: column;
}

/* Style for the input field */
.chat-input-field {
    width: 100%;
    height: 90%;
}

.chat-input-field > .unity-text-field__input {
    font-size: 14px;
    color: black;
    background-color: white;
    flex-wrap: wrap;
    white-space: normal;
    height: 100%;
    overflow: scroll;
}

.chat-input-field > .unity-base-text-field__input--placeholder {
    color: gray;
}

.chat-input-field > .unity-base-text-field__input {
    -unity-background-image-tint-color: transparent;
    border-color: transparent;
    background-color: white;
}

.chat-input-field > .unity-base-text-field__input:focus {
    border-color: transparent;
}

.unity-base-text-field__input > .unity-scroller > .unity-slider {
    margin-right: 0;
}

/* Style for the submit button */
.chat-submit-button {
    position: absolute;
    bottom: 0px;
    right: 0px;
    color: black;
    background-color: #88e181;
    height: 10%;
    width: 20%;
}

.delete-button{
    position: absolute;
    margin: 1px;
    bottom: 2px;
    right: 3px;
    height: 15px;
    width: 10px;
}