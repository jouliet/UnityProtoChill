/* Container for the Base Object */
.uml-diagram {
    background-color: #393938;
    border-width: 5px;
    border-color: #b83c82;
    padding: 0px;
    margin: 10px;
    width: 300px;
}

.uml-diagram__selected {
    background-color: #8f8f8c;
    border-color: #ffffff;
}

.uml-diagram-header {
    flex-direction: row;
    justify-content: center;
    align-items: center;
}

.uml-base-object {
    flex-grow: 1;
}

.collapse-button__down {
    position: absolute;
    right: 0px;
    background-color: #393938;
    border-width: 0px;
    background-image: url('resources/collapse-button-down.png');
    height: 35%;
    width: 7%;
}

.collapse-button__up {
    position: absolute;
    right: 0px;
    background-color: #393938;
    border-width: 0px;
    background-image: url('resources/collapse-button-up.png');
    height: 35%;
    width: 7%;
}

/* Base Object styling */
.uml-base-object {
    font-size: 16px;
    -unity-font-style: bold;
    color: #16afca;
    -unity-text-align: middle-center;
    padding: 5px;
}

/* Section line styling */
.uml-section {
    padding: 5px;
    border-top-width: 3px;
    border-top-color: #b83c82; 
}

/* Text styling */
.uml-text {
    font-size: 14px;
    color: #ffffff;
    -unity-font-style: normal;
}

/* Attributes and methods styling */
.uml-attributes, .uml-methods {
    margin-left: 10px;
}

/* UML Connexions*/
.uml-line {
    position: absolute;
    height: 2px;
    background-color: #ec9533;
    transform-origin: top left;
}

.uml-arrow {
    width: 0;
    height: 0;
    border-left-color: transparent;
    border-right-color: transparent;
    border-top-color: #ec9533;
    border-width: 10px;
    position: absolute;
    transform-origin: center;
}